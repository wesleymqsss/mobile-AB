<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"> {/* Efeito de clique */}

    <TextView
        android:id="@+id/textViewNomeOngDoada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doado para: Nome da ONG"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewValorDoacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor: R$ 00.00"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textViewDataDoacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data: YYYY-MM-DD HH:MM:SS"
        android:textSize="12sp"
        android:layout_marginTop="4dp"/>

</LinearLayout>