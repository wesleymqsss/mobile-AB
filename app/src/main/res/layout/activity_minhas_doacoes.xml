<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MinhasDoacoesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_minhas_doacoes"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMinhasDoacoes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_minhas_doacoes"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textViewMinhasDoacoesVazio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Você ainda não realizou nenhuma doação."
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>